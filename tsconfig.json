{
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "alwaysStrict": true,
    "baseUrl": "./",
    "lib": ["dom", "es2017"],
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "sourceMap": true,
    // "inlineSourceMap": true,
    "noImplicitAny": true,
    "target": "es5"
  },
  "include": [
    "./src/**/*", "tests/**/*"
  ]
}